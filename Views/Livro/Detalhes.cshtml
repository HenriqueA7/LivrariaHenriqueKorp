@model LivroModel

<div class="container my-5">
    <div class="p-5 text-center bg-body-tertiary rounded-3">
        <img src="/imagem/@Model.Capa" style="width:300px; height:400px" />
        <h1 class="text-body-emphasis">@Model.Titulo</h1>
        <p class="col-lg-8 mx-auto fs-5 text-muted">
            @Model.Descricao
        </p>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Preço: R$ @Model.Valor</li>
        </ul>


        <a type="submit" class="btn btn-info w-50 mt-3" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar</a>


    </div>
</div>